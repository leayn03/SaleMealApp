<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBg"
    android:orientation="vertical"  >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/frame">

        <TextView
                android:id="@+id/updateSaleInfoTitle"
                android:text="@string/updateSaleInfoTitle"
                android:background="@color/frame"
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/titleText"
                android:textSize="20sp"/>
             <ImageButton
                android:id="@+id/updateSaleInfoReturnButton"
                android:src="@drawable/pre_btn"
                android:background="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    	    <View
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginTop="10dp"
	            android:background="@color/editBg"
	            />
    	    
    <RelativeLayout
       		  android:layout_width="match_parent"
              android:layout_height="120dip"
              android:orientation="horizontal" 
              >
              <TextView
	            android:id="@+id/salePictureText"
	            android:layout_width="80dip"
	            android:layout_height="wrap_content"
	            android:text="商户照片"
	            android:textSize="20sp"
	            android:layout_marginLeft="26dip"
	            android:layout_marginTop="50dip"
	            android:layout_marginRight="35dip"
	            android:textColor="@android:color/black"
                        />
              <ImageView
                  android:id="@+id/salePicture"
                  android:layout_width="100dip"
                  android:layout_height="100dip"
                  android:layout_marginTop="12dip"
	              android:layout_marginRight="65dip"
                  android:layout_toRightOf="@id/salePictureText"
                  android:layout_gravity="center_vertical"
                  android:src="@drawable/logo"

                  >
                                   
              </ImageView>
              <ImageButton
                  android:src="@drawable/next_btn"
                  android:id="@+id/updateSalePictureNext"
                  android:layout_toRightOf="@id/salePicture"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="40dip"
	              android:layout_marginRight="25dip"
                  android:layout_gravity="center_vertical"
                  android:background="@null"

                  >
                  
              </ImageButton>
        
    </RelativeLayout>
        
	    <View
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginTop="10dp"
	            android:background="@color/editBg"
	            />
         <Button
                    android:id="@+id/updatePhoneButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/viewButton"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="1dp"
                    android:drawableRight="@drawable/next_btn"
                    android:text="@string/SalePhone"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                     android:paddingLeft="20dp"
                    />
                  <Button
                    android:id="@+id/updateSaleAddressButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/viewButton"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="1dp"
                    android:drawableRight="@drawable/next_btn"
                    android:text="@string/SaleAddress"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                     android:paddingLeft="20dp"
                    />
                  <Button
                    android:id="@+id/updateSalePasswordButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/viewButton"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="1dp"
                    android:drawableRight="@drawable/next_btn"
                    android:text="@string/SalePassword"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                     android:paddingLeft="20dp"
                    />
                  <Button
                    android:id="@+id/updateAppCheck"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/viewButton"
                    android:layout_marginTop="30dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="1dp"
                    android:drawableRight="@drawable/next_btn"
                    android:text="@string/updateAppCheck"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                     android:paddingLeft="20dp"
                    />
                  
         <Button
            android:id="@+id/logOutSale"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_marginTop="25dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:text="@string/logout"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/btnTextColor"
            android:background="@color/buttonColor"
           />
    

</LinearLayout>
